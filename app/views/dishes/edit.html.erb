<h1>Editing dish</h1>

<% form_for(@dish) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :is_available %><br />
    <%= f.check_box :is_available %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @dish %> |
<%= link_to 'Back', dishes_path %>