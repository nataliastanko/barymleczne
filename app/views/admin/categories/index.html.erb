<div id="box">

<div class="standard"> <h3>Kategorie</h3></div>

<div class="standard"> <p class="label"><%= link_to 'Dodaj kategorię', new_admin_category_path %></p></div>

<table>
  <tr>
    <th>Nazwa</th>
    <th>Edycja</th>

<% if current_editor.admin %>
    <th>Usuwanie</th>
<% end %>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%=h category.name %></td>
    <td><%= link_to 'Zmień nazwę', edit_admin_category_path(category) %></td>
<% if current_editor.admin %>
    <td><%= link_to 'Usuń', admin_category_path(category), :confirm => 'Usuniecie tej kategorii spowoduje usunięcie jej powiązań z miejscami. Na pewno usunąć?', :method => :delete %></td>
<% end %>
  </tr>
<% end %>
</table>

</div><!-- box -->

